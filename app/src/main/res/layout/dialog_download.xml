<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width = "match_parent"
            card_view:cardCornerRadius="14dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#636060"
            android:layout_margin="45dp"
            android:layout_height = "wrap_content" >
            <LinearLayout
            android:id = "@+id/llayout"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_gravity = "center"
            android:orientation = "vertical">



            <Button
                android:id = "@+id/streamButton"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:background = "@drawable/button_shape_play"
                android:text = "@string/stream_text"
                android:layout_gravity="center"
                android:textColor = "@android:color/white"
                android:textStyle = "bold" /><View
            android:id = "@+id/view"
            android:layout_width = "match_parent"
            android:layout_height = "20dp" /><Button
            android:id = "@+id/downloadButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/button_shape_download"
            android:text = "@string/download_text"
                android:layout_gravity="center"
            android:textColor = "@android:color/white"
            android:textStyle = "bold" /><View
            android:id = "@+id/view2"
            android:layout_width = "match_parent"
            android:layout_height = "20dp" /><Button
            android:id = "@+id/cancelButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
                android:layout_gravity="center"
            android:background = "@drawable/button_shape"
            android:text = "@string/cancel_text"
            android:textColor = "@android:color/white"
            android:textStyle = "bold" />

            </LinearLayout></androidx.cardview.widget.CardView>

</LinearLayout>